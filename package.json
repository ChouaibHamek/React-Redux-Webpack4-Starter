{
  "name": "React-Redux-Webpack4-Starter",
  "version": "1.0.0",
  "description": "A SPA to manage the platform internally",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register --require ./app/src/utils/test_helper.js \"./{,!(node_modules)/**/}*.spec.js\"",
    "client": "webpack-dev-server --config ./webpack.config.js --mode development",
    "server": "NODE_ENV=development nodemon server/server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "build-semantic": "cd app/src/semantic && gulp build-css build-assets",
    "watch-semantic": "cd app/src/semantic && npm run build-semantic && gulp watch",
    "test:watch": "npm run test -- --watch",
    "test:watch:feat": "mocha --watch --compilers js:babel-core/register --require ./app/src/utils/test_helper.js --recursive",
    "lint": "esw webpack.config.js --ext .js --ext .jsx app server",
    "lint:watch": "npm run lint -- --watch",
    "postinstall": "npm run build-semantic && webpack -p",
    "start": "NODE_ENV=production node server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.3",
    "babel-plugin-lodash": "^3.3.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-jquery": "^2.0.0",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-watch": "^3.1.3",
    "file-loader": "^1.1.11",
    "gulp": "^3.9.1",
    "jquery": "^3.3.1",
    "jsdom": "^11.6.2",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.2",
    "react-hot-loader": "^4.0.0",
    "redbox-react": "^1.5.0",
    "redux-devtools-extension": "^2.13.2",
    "request": "^2.85.0",
    "semantic-ui": "^2.3.0",
    "style-loader": "^0.20.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.2",
    "lodash": "^4.17.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "semantic-ui-react": "^0.78.3"
  }
}
